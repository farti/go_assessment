@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-table fa-fw"></i> Assets
                </div>
                <div class="panel-body">
                    <table id="assetTable" class="table table-striped table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Country
                                </th>
                                <th>
                                    Type
                                </th>
                                <th>
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody></tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#assetTable").DataTable({
                ajax: {
                    url: "/api/asset",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, asset) {
                            return "<a href='/Home/Details/" + asset.id + "'>" + asset.assetName + "</a>";
                        }
                    },
                    {
                        data: "country"
                    },
                    {
                        data: "mimeType"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-asset-id=" + data + ">Delete</button>";
                        }
                    }]
            });

            $("#assetTable").on("click", ".js-delete", function () {
                var button = $(this);
                if (confirm("Are u sure u want to delete ?")) {
                    $.ajax({
                        url: "/api/asset/" + button.attr("data-asset-id"),
                        method: "DELETE",
                        success: function () {
                            table.row(button.parents("tr")).remove().draw();
                        }
                    });
                }
            });
        });
    </script>
}